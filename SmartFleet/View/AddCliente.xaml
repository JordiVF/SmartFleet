<Window x:Class="SmartFleet.View.AddCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:SmartFleet.View"
        mc:Ignorable="d"
        Title="ClienteNuevo" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded">
    <Border CornerRadius="10"                    
            BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.ColumnDefinitions>
                <!--Navigation menu-->
                <ColumnDefinition Width="250"/>
                <!--Content section-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--Navigation Menu-->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>

                    <!--Logo-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0,40">

                        <Image Source="/Resources/SmartFleetIcon.png" Height="30"/>
                        <TextBlock Text="Smart Fleet"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>

                    <!--Menu Buttons-->
                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Dashboard"
                            Tag="{StaticResource color1}"
                            Click="btn_Dashboard_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Dashboard" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Empleados"
                            Tag="{StaticResource color2}"
                            Click="btn_Empleados_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="UserGroup" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Empleados" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Clientes"
                            Tag="{StaticResource color3}"
                            Click="btn_Clientes_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Box" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Clientes" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Vehiculos"
                            Tag="{StaticResource color4}"
                            Click="btn_Vehiculos_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Car" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Vehiculos" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Mantenimiento"
                            Tag="{StaticResource color5}"
                            Click="btn_Mantenimiento_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Wrench" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Mantenimiento" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Alquiler"
                            Tag="{StaticResource color6}"
                            Click="btn_Alquiler_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Desktop" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Alquiler" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Salir"
                                 Tag="{StaticResource color7}"
                                 Click="btn_Salir_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="ArrowRightFromBracket" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Salir" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!--Main Section-->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control bar-->
                        <RowDefinition Height="25"/>
                        <!--Header / Caption-->
                        <RowDefinition Height="35"/>
                        <!--Content section-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--Control bar-->
                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">

                        <Button x:Name="btnClose"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color4}"
                                Click="btnClose_Click">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>
                        </Button>

                        <Button x:Name="btnMinimize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color8}"
                                Click="btnMinimize_Click">
                            <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <!--Header / Caption-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition>

                            </ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Caption-->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                        </StackPanel>

                        <!--User options-->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">

                            <TextBlock x:Name="txtUsername"
                                       Text="username"
                                       Foreground="{StaticResource titleColor3}"
                                       FontFamily="Montserrat"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>

                            <Ellipse Height="35" Width="35"
                                     Stroke="{StaticResource color2}"
                                     StrokeThickness="2"
                                     Margin="10,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="imgUser"
                                                ImageSource="/Resources/user.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Nombre"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Margin="56,37,0,0"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}" />
                        <Label Content="Apellidos"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Margin="56,137,0,0"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}" />
                        <Label Content="Telefono"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Margin="641,37,0,0"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}" />
                        <Label Content="Email"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Margin="641,137,0,0"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}" />
                        <TextBox x:Name="txtNombre"
                            FontSize="13"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}"
                            CaretBrush="{StaticResource plainTextColor3}"
                            BorderBrush="{StaticResource plainTextColor3}"
                            BorderThickness="1,1,1,1"                             
                            VerticalContentAlignment="Center"
                            Margin="201,37,605,575"/>
                        <TextBox x:Name="txtApellidos"
                            FontSize="13"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}"
                            CaretBrush="{StaticResource plainTextColor3}"
                            BorderBrush="{StaticResource plainTextColor3}"
                            BorderThickness="1,1,1,1"                             
                            VerticalContentAlignment="Center"
                            Margin="201,137,605,475"/>
                        <TextBox x:Name="txtTelefono"
                            FontSize="13"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}"
                            CaretBrush="{StaticResource plainTextColor3}"
                            BorderBrush="{StaticResource plainTextColor3}"
                            BorderThickness="1,1,1,1"                             
                            VerticalContentAlignment="Center"
                            Margin="777,37,29,575"/>
                        <TextBox x:Name="txtEmail"
                            FontSize="13"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}"
                            CaretBrush="{StaticResource plainTextColor3}"
                            BorderBrush="{StaticResource plainTextColor3}"
                            BorderThickness="1,1,1,1"                             
                            VerticalContentAlignment="Center"
                            Margin="777,137,29,475"/>
                        <Button x:Name="btnAddCliente"
                            Content="Enviar"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Margin="949,582,0,0"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}"
                            Click="btnAddCliente_Click"/>
                        <Label Content="Dirección"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Margin="56,237,0,0"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}" />
                        <TextBox x:Name="txtDireccion"
                            FontSize="13"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}"
                            CaretBrush="{StaticResource plainTextColor3}"
                            BorderBrush="{StaticResource plainTextColor3}"
                            BorderThickness="1,1,1,1"                             
                            VerticalContentAlignment="Center"
                            Margin="201,237,605,376"/>
                        <Label Content="Ciudad"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Margin="641,237,0,0"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}" />
                        <TextBox x:Name="txtCiudad"
                            FontSize="13"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}"
                            CaretBrush="{StaticResource plainTextColor3}"
                            BorderBrush="{StaticResource plainTextColor3}"
                            BorderThickness="1,1,1,1"                             
                            VerticalContentAlignment="Center"
                            Margin="777,237,29,376"/>
                        <Label Content="Provincia"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Margin="630,319,0,0"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}" />
                        <TextBox x:Name="txtProvincia"
                            FontSize="13"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}"
                            CaretBrush="{StaticResource plainTextColor3}"
                            BorderBrush="{StaticResource plainTextColor3}"
                            BorderThickness="1,1,1,1"                             
                            VerticalContentAlignment="Center"
                            Margin="777,319,29,294"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
