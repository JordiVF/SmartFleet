<Window x:Class="SmartFleet.View.AddMantenimientos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:SmartFleet.View"
        mc:Ignorable="d"
        Title="AlquilerNuevo" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded">
    <Border CornerRadius="10"                    
            BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.ColumnDefinitions>
                <!--Navigation menu-->
                <ColumnDefinition Width="250"/>
                <!--Content section-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--Navigation Menu-->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>

                    <!--Logo-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0,40">

                        <Image Source="/Resources/SmartFleetIcon.png" Height="30"/>
                        <TextBlock Text="Smart Fleet"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>

                    <!--Menu Buttons-->
                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Dashboard"
                            Tag="{StaticResource color1}"
                            Click="btn_Dashboard_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Dashboard" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Empleados"
                            Tag="{StaticResource color2}"
                            Click="btn_Empleados_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="UserGroup" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Empleados" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Clientes"
                            Tag="{StaticResource color3}"
                            Click="btn_Clientes_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Box" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Clientes" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Vehiculos"
                            Tag="{StaticResource color4}"
                            Click="btn_Vehiculos_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Car" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Vehiculos" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Mantenimiento"
                            Tag="{StaticResource color5}"
                            Click="btn_Mantenimiento_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Wrench" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Mantenimiento" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Alquiler"
                            Tag="{StaticResource color6}"
                            Click="btn_Alquiler_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Desktop" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Alquiler" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource menuButton}"
                            Name="btn_Salir"
                                 Tag="{StaticResource color7}"
                                 Click="btn_Salir_Click">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="ArrowRightFromBracket" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Salir" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!--Main Section-->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control bar-->
                        <RowDefinition Height="25"/>
                        <!--Header / Caption-->
                        <RowDefinition Height="35"/>
                        <!--Content section-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--Control bar-->
                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">

                        <Button x:Name="btnClose"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color4}"
                                Click="btnClose_Click">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>
                        </Button>

                        <Button x:Name="btnMinimize"
                                Style="{StaticResource controlButton}"
                                Tag="{StaticResource color8}"
                                Click="btnMinimize_Click">
                            <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <!--Header / Caption-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition>

                            </ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Caption-->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                        </StackPanel>

                        <!--User options-->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">

                            <TextBlock x:Name="txtUsername"
                                       Text="username"
                                       Foreground="{StaticResource titleColor3}"
                                       FontFamily="Montserrat"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>

                            <Ellipse Height="35" Width="35"
                                     Stroke="{StaticResource color2}"
                                     StrokeThickness="2"
                                     Margin="10,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="imgUser"
                                                ImageSource="/Resources/user.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Fecha de Reparación"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Margin="594,33,0,0"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}" />
                        <TextBox x:Name="txtCoste"
                            FontSize="13"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}"
                            CaretBrush="{StaticResource plainTextColor3}"
                            BorderBrush="{StaticResource plainTextColor3}"
                            BorderThickness="1,1,1,1"                             
                            VerticalContentAlignment="Center"
                            Margin="756,116,205,496"/>
                        <Button x:Name="btnAddMantenimientos"
                            Content="Enviar"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Margin="976,596,0,0"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}"
                            Click="btnAddMantenimientos_Click"/>
                        <DatePicker Name="dtFechaReparacion" 
                            FontSize="13"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}"
                            BorderBrush="{StaticResource plainTextColor3}"
                            BorderThickness="1,1,1,1"                             
                            VerticalContentAlignment="Center"
                            Margin="756,28,118,575"/>

                        <DataGrid x:Name="dgvVehiculo"
                                  IsReadOnly="True"
                                  AutoGenerateColumns="False"
                                  SelectionUnit="FullRow"
                                  ColumnWidth="*"
                                  Background="#200F53"
                                  BorderThickness="0" Margin="28,28,524,32"
                                  SelectedCellsChanged="dgvVehiculo_SelectedCellsChanged">
                            <DataGrid.Resources>
                                <local:DisponibleConverter x:Key="DisponibleConverter" />
                            </DataGrid.Resources>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#BCBEE0"/>
                                    <Setter Property="Padding" Value="10,0,0,10"/>
                                    <Setter Property="FontFamily" Value="Montserrat"/>
                                    <Setter Property="FontSize" Value="15"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding IdVehiculo}" Header="IdVehiculo" HeaderStringFormat="" Visibility="Hidden"/>
                                <DataGridTextColumn Binding="{Binding Marca}" Header="Marca" Width="Auto"/>
                                <DataGridTextColumn Binding="{Binding Modelo}" Header="Modelo" Width="Auto"/>
                                <DataGridTextColumn Binding="{Binding Matricula}" Header="Matricula" HeaderStringFormat="" Width="Auto"/>
                                <DataGridTextColumn Binding="{Binding Kilometraje}" Header="Kilometraje" HeaderStringFormat="" Width="Auto"/>
                                <DataGridTemplateColumn Header="Disponibilidad" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Disponible, Converter={StaticResource DisponibleConverter}}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Binding="{Binding Precio}" Header="Precio" HeaderStringFormat="" Width="Auto"/>
                                <DataGridTemplateColumn Header="Foto del Vehiculo" HeaderStringFormat="" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding FotoVehiculo}" RenderOptions.BitmapScalingMode="HighQuality" Height="50" Width="100"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Label Content="Coste de la reparación"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Margin="584,116,0,0"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}" />
                        <Label Content="Descripción de la reparación"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="13"
                            Margin="571,194,0,0"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}" />
                        <TextBox x:Name="txtDescripcion"
                            FontSize="13"
                            Background="Transparent"
                            FontWeight="Medium"
                            FontFamily="Montserrat"                            
                            Foreground="{StaticResource plainTextColor3}"
                            CaretBrush="{StaticResource plainTextColor3}"
                            BorderBrush="{StaticResource plainTextColor3}"
                            BorderThickness="1,1,1,1"                             
                            VerticalContentAlignment="Top"
                            Margin="756,194,52,273"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
